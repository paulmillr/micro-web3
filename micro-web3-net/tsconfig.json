{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "module": "node16",
    "outDir": ".",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "baseUrl": "src",
    "resolveJsonModule": true
  },
  "include": [
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "contracts",
    "api",
    "micro-web3-net"
  ]
}